// This is an example config file for _jaide
// In order for _jaide to function you should copy this file, rename the copy to config.json and change the values
// as appropriate for your installation
//
// Please note that you have to create the utilized database and user before the setup process or else it will fail.
//
// !IMPORTANT! Remove all comment strings from the config.json file before starting the app. Comment strings (lines in
// this file starting with '//') since comments are not allowed in json as per specification and the file cannot be
// parsed if containing comments
{
    // Specify host and port for the server
    "server_arguments": {
        "host": "",
        "port": 8000
    },
    "database_connection_arguments": {
    // Arguments used to connect to the database
        "passwd": "dynamic_content", // password
        "database": "dynamic_content",
        "user": "dynamic_content",
        "host": "localhost",
        "autocommit": true
    },
    "setup": true,
    "database_type": "mysql"
}